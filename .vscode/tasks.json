{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "pnpm: dev",
			"type": "shell",
			"command": "pnpm run dev",
			"isBackground": true,
			"problemMatcher": {
				"owner": "vite",
				"pattern": {
					"regexp": ".*"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".*ready in.*",
					"endsPattern": ".*"
				}
			}
		}
	]
}
